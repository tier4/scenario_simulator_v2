<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>openscenario_visualization</name>
  <version>4.3.1</version>
  <description>Visualization tools for simulation results</description>
  <maintainer email="masaya.kataoka@tier4.jp">Masaya Kataoka</maintainer>
  <maintainer email="kyoichi.sugahara@tier4.jp">Kyoichi Sugahara</maintainer>
  <license>Apache License 2.0</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_auto</buildtool_depend>
  <buildtool_depend>pkg-config</buildtool_depend>

  <depend version_gte="1.11.2">pluginlib</depend>
  <depend>class_loader</depend>
  <depend>color_names</depend>
  <depend>openscenario_interpreter_msgs</depend>
  <depend>qtbase5-dev</depend>
  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>rviz2</depend>
  <depend>rviz_common</depend>
  <depend>traffic_simulator</depend>
  <depend>traffic_simulator_msgs</depend>
  <depend>visualization_msgs</depend>
  <depend>nlohmann-json-dev</depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_cmake_clang_format</test_depend>
  <test_depend>ament_cmake_copyright</test_depend>
  <test_depend>ament_cmake_lint_cmake</test_depend>
  <test_depend>ament_cmake_pep257</test_depend>
  <test_depend>ament_cmake_xmllint</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
    <rviz plugin="${prefix}/plugin.xml"/>
  </export>
</package>
